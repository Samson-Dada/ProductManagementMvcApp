@model ProductViewModel

<form class="row g-3 mt-5">
    <div class="col-md-12">
        <div class="form-floating">
            <input type="text" class="form-control" id="floatingName" placeholder="Your Name" />
            <label for="floatingName">Product Name</label>
        </div>
    </div>
    <div class="col-12">
        <div class="form-floating">
            <textarea class="form-control" placeholder="Address" id="floatingTextarea" style="height: 100px"></textarea>
            <label for="floatingTextarea">Description</label>
        </div>
    </div>
    <div class="col-md-12">
        <div class="form-floating">
            <input type="number" class="form-control" id="floatingName" placeholder="Your Name" />
            <label for="floatingName">Price</label>
        </div>
    </div>
    <div class="col-md-4">
        <div class="form-floating mb-3">
            <select class="form-select" id="floatingSelect" aria-label="Category">
                <option selected>Cosmetics</option>
                <option value="1">Dairy Food</option>
                <option value="2">Clothe</option>
            </select>
            <label for="floatingSelect">Category</label>
        </div>
    </div>
    <div class="text-center">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Reset</button>
    </div>
</form>